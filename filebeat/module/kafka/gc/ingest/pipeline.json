{
  "description": "Kafka GC Logs",
  "processors": [
    {
      "grok": {
        "field": "message",
        "patterns": [
          "(?m)%{TIMESTAMP_ISO8601:kafka.gc.timestamp}:.*GC pause.*, %{NUMBER:kafka.gc.pause:float}.*Eden: %{MEM:kafka.gc.eden.before.used}\\(%{MEM:kafka.gc.eden.before.total}\\)->%{MEM:kafka.gc.eden.after.used}\\(%{MEM:kafka.gc.eden.after.total}\\).*Survivors: %{MEM:kafka.gc.survivors.before.used}->%{MEM:kafka.gc.survivors.after.used}.*Heap: %{MEM:kafka.gc.heap.before.used}\\(%{MEM:kafka.gc.heap.before.total}\\)->%{MEM:kafka.gc.heap.after.used}\\(%{MEM:kafka.gc.heap.after.total}\\).*Times: user=%{NUMBER:kafka.gc.time.user.sec:float}.*sys=%{NUMBER:kafka.gc.time.sys.sec:float}.*real=%{NUMBER:kafka.gc.time.real.sec:float}"
        ],
        "pattern_definitions": {
          "MEM": "%{NUMBER}%{MEM_UNIT}",
          "MEM_UNIT": "B|K|M|G"
        }
      }
    },
    {
      "script": {
        "lang": "painless",
        "inline": "def getBytes(def x) {def last = x.length() - 1; def sizes = ['B': 1, 'K': 1024, 'M': 1048576, 'G': 1073741824]; return (Float.parseFloat(x.substring(0, last)) * sizes[x.substring(last)]).longValue();} def toBytes(def c, def field) {c[field] = getBytes(c[field]);} def stToBytes(def c, def subs, def fields) {for (def s : subs) {for (def field : fields) {toBytes(c[s], field);}} return true;} for (def kv : params.fields.entrySet()) { if (ctx.containsKey(kv.getKey())) { stToBytes(ctx[kv.getKey()], ['before', 'after'], kv.getValue()) }}",
        "on_failure" : [
          {
            "set" : {
              "field" : "error.conv",
              "value" : "{{ _ingest.on_failure_message }}"
            }
          }
        ],
        "params": {
          "fields": {
            "kafka.gc.eden": ["total", "used"],
            "kafka.gc.survivors": ["used"],
            "kafka.gc.heap": ["total", "used"]
          }
        }
      }
    },
    {
      "script": {
        "lang": "painless",
        "inline": "for (def kv : params.fields.entrySet()) { if (ctx.containsKey(kv.getKey())) { def d = ctx[kv.getKey()]; d.delta = new HashMap(); for (def k : kv.getValue()) {d.delta[k] = d.before[k] - d.after[k];}}}",
        "on_failure" : [
          {
            "set" : {
              "field" : "error.delta",
              "value" : "{{ _ingest.on_failure_message }}"
            }
          }
        ],
        "params": {
          "fields": {
            "kafka.gc.eden": ["total", "used"],
            "kafka.gc.heap": ["total", "used"],
            "kafka.gc.survivors": ["used"]
          }
        }
      }
    },
    {
      "script": {
        "lang": "painless",
        "on_failure" : [
          {
            "set" : {
              "field" : "error.kafka.gc.pause",
              "value" : "{{ _ingest.on_failure_message }}"
            }
          }
        ],
        "inline": " if (ctx.containsKey('kafka.gc.pause')) { ctx.gc_pause_us = (long)(ctx.gc_pause * 1000000) }"
      }
    },
    {
      "rename": {
        "field": "@timestamp",
        "target_field": "beat.read_time"
      }
    },
    {
      "date": {
        "field": "kafka.gc.timestamp",
        "target_field": "@timestamp",
        "formats": ["ISO8601"]
      }
    },
    {"remove": {"field": "message" }},
    {"remove": {"field": "kafka.gc.timestamp" }},
    {"remove": {"field": "kafka.gc.pause" }}
  ],
  "on_failure" : [{
    "set" : {
      "field" : "error.pipeline",
      "value" : "{{ _ingest.on_failure_message }}"
    }
  }]
}
